<header class="menu round">
	<div id="logo">
		<%= link_to logo, root_path %>
	</div>
	<% if signed_in? %>
		<ul>
			<li><%= link_to "Главная", root_path %></li>
			<li><%= link_to "Сайты пользователей", sites_path %></li>
			<li><%= link_to "Профиль", current_user %></li>
			<li><%= link_to "Настройки", edit_user_path(current_user) %></li>
			<li><%= link_to "Выйти", signout_path, :method => :delete %></li>
			<li><%= link_to "Войти", signin_path %></li>
		</ul>
	<% else %>
		<h1>Добро пожаловать!</h1> 
	<% end %>
</header>